{
  "name": "code-compass",
  "displayName": "Code Compass",
  "description": "Navigate and organize your codebase by functionality across different file types.",
  "version": "1.0.0",
  "publisher": "Chandan Bhagat",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onView:codeCompassExplorer",
    "onView:codeCompassExplorerView",
    "onCommand:codeCompass.groupCode",
    "onCommand:codeCompass.groupWorkspace",
    "onCommand:codeCompass.showGroups",
    "onCommand:codeCompass.scanExternalFolder",
    "onCommand:codeCompass.refreshTreeView",
    "onCommand:codeCompass.navigateToGroup",
    "onCommand:codeCompass.addCodeGroupDialog",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-compass-container",
          "title": "Code Compass",
          "icon": "resources/compass-icon.svg"
        }
      ]
    },
    "views": {
      "code-compass-container": [
        {
          "id": "codeCompassExplorer",
          "name": "Code Compass"
        }
      ],
      "explorer": [
        {
          "id": "codeCompassExplorerView",
          "name": "Code Compass"
        }
      ]
    },
    "commands": [
      {
        "command": "codeCompass.groupCode",
        "title": "Group Code in Current File"
      },
      {
        "command": "codeCompass.groupWorkspace",
        "title": "Group Code in Workspace",
        "icon": "$(search)"
      },
      {
        "command": "codeCompass.scanExternalFolder",
        "title": "Scan External Project Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "codeCompass.showGroups",
        "title": "Show Code Groups"
      },
      {
        "command": "codeCompass.refreshTreeView",
        "title": "Refresh Code Groups",
        "icon": "$(refresh)"
      },
      {
        "command": "codeCompass.navigateToGroup",
        "title": "Navigate to Code Group"
      },
      {
        "command": "codeCompass.addCodeGroupDialog",
        "title": "Add Code Group (Dialog)",
        "icon": "$(add)"
      }
    ],
    "keybindings": [
      {
        "command": "codeCompass.showGroups",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "codeCompass.addCodeGroupDialog",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeCompass.groupCode",
          "group": "navigation"
        },
        {
          "command": "codeCompass.showGroups",
          "group": "navigation"
        },
        {
          "command": "codeCompass.addCodeGroupDialog",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "codeCompass.groupWorkspace",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "codeCompass.refreshTreeView",
          "when": "view == codeCompassExplorer || view == codeCompassExplorerView",
          "group": "navigation"
        },
        {
          "command": "codeCompass.groupWorkspace",
          "when": "view == codeCompassExplorer || view == codeCompassExplorerView",
          "group": "navigation"
        },
        {
          "command": "codeCompass.scanExternalFolder",
          "when": "view == codeCompassExplorer || view == codeCompassExplorerView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.99.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "vscode": "^1.1.37"
  }
}
