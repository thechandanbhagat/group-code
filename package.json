{
  "name": "groupcode",
  "displayName": "Group Code",
  "description": "Navigate and organize your codebase by functionality across different file types.",
  "version": "1.2.0",
  "icon": "resources/compass-icon.png",
  "publisher": "thechandanbhagat",
  "repository": "https://github.com/thechandanbhagat/group-code",
  "engines": {
    "vscode": "^1.99.1"
  },
  "activationEvents": [
    "onView:groupCodeExplorer",
    "onView:groupCodeExplorerView",
    "onCommand:groupCode.groupCode",
    "onCommand:groupCode.showGroups",
    "onCommand:groupCode.scanExternalFolder",
    "onCommand:groupCode.refreshTreeView",
    "onCommand:groupCode.navigateToGroup",
    "onCommand:groupCode.addCodeGroupDialog",
    "onLanguageModelTool:groupcode_generate",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "group-code-container",
          "title": "Group Code",
          "icon": "resources/compass-icon.svg"
        }
      ]
    },
    "views": {
      "group-code-container": [
        {
          "id": "groupCodeExplorer",
          "name": "Group Code",
          "type": "tree"
        }
      ],
      "explorer": [
        {
          "id": "groupCodeExplorerView",
          "name": "Group Code",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "groupCodeExplorer",
        "contents": "Filter code groups by typing in the search box above.\n[Search Groups](command:groupCode.filterGroups)"
      },
      {
        "view": "groupCodeExplorerView",
        "contents": "Filter code groups by typing in the search box above.\n[Search Groups](command:groupCode.filterGroups)"
      }
    ],
    "commands": [
      {
        "command": "groupCode.filterGroups",
        "title": "Search Groups",
        "category": "Group Code",
        "icon": "$(search)",
        "enablement": "view == groupCodeExplorer || view == groupCodeExplorerView"
      },
      {
        "command": "groupCode.groupCode",
        "title": "Group Code in Current File"
      },
      {
        "command": "groupCode.scanExternalFolder",
        "title": "Scan External Project Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "groupCode.showGroups",
        "title": "Show Code Groups"
      },
      {
        "command": "groupCode.refreshTreeView",
        "title": "Refresh Code Groups",
        "icon": "$(refresh)"
      },
      {
        "command": "groupCode.navigateToGroup",
        "title": "Navigate to Code Group"
      },
      {
        "command": "groupCode.addCodeGroupDialog",
        "title": "Add Code Group (Dialog)",
        "icon": "$(add)"
      },
      {
        "command": "groupCode.suggestGroupWithAI",
        "title": "Suggest Code Group with AI",
        "icon": "$(sparkle)"
      }
    ],
    "chatParticipants": [
      {
        "id": "groupcode",
        "name": "groupcode",
        "description": "Helps you organize and navigate code groups in your workspace",
        "isSticky": true,
        "commands": [
          {
            "name": "generate",
            "description": "AI-powered: Automatically generate @group comments for the current file"
          },
          {
            "name": "scan",
            "description": "Scan workspace or current file for code groups"
          },
          {
            "name": "suggest",
            "description": "Get AI suggestions for grouping selected code"
          },
          {
            "name": "list",
            "description": "Show all code groups in the workspace"
          },
          {
            "name": "find",
            "description": "Search for specific code groups"
          },
          {
            "name": "navigate",
            "description": "Navigate to a specific code group"
          },
          {
            "name": "refresh",
            "description": "Rescan all files for code groups"
          }
        ]
      }
    ],
    "enabledApiProposals": [
      "languageModels"
    ],
    "keybindings": [
      {
        "command": "groupCode.showGroups",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "groupCode.addCodeGroupDialog",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "groupCode.groupCode",
          "group": "navigation"
        },
        {
          "command": "groupCode.showGroups",
          "group": "navigation"
        },
        {
          "command": "groupCode.addCodeGroupDialog",
          "group": "navigation"
        },
        {
          "command": "groupCode.suggestGroupWithAI",
          "group": "navigation"
        }
      ],
      "explorer/context": [],
      "view/title": [
        {
          "command": "groupCode.filterGroups",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation@0"
        },
        {
          "command": "groupCode.refreshTreeView",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation@1"
        },
        {
          "command": "groupCode.scanExternalFolder",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "prepublish": "npm run build",
    "start": "code --extensionDevelopmentPath='$PWD'"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.99.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "vscode": "^1.1.34"
  }
}
