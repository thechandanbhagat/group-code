{
  "name": "groupcode",
  "displayName": "Group Code",
  "description": "Navigate and organize your codebase by functionality across different file types.",
  "version": "1.6.1",
  "icon": "resources/compass-icon.png",
  "publisher": "thechandanbhagat",
  "repository": "https://github.com/thechandanbhagat/group-code",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguageModelTool:groupcode_generate",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "group-code-container",
          "title": "Group Code",
          "icon": "resources/compass-icon.svg"
        }
      ]
    },
    "views": {
      "group-code-container": [
        {
          "id": "groupCodeExplorer",
          "name": "Group Code",
          "type": "tree"
        }
      ],
      "explorer": [
        {
          "id": "groupCodeExplorerView",
          "name": "Group Code",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "groupCodeExplorer",
        "contents": "Filter code groups by typing in the search box above.\n[Search Groups](command:groupCode.filterGroups)"
      },
      {
        "view": "groupCodeExplorerView",
        "contents": "Filter code groups by typing in the search box above.\n[Search Groups](command:groupCode.filterGroups)"
      }
    ],
    "commands": [
      {
        "command": "groupCode.filterGroups",
        "title": "Search Groups",
        "category": "Group Code",
        "icon": "$(search)",
        "enablement": "view == groupCodeExplorer || view == groupCodeExplorerView"
      },
      {
        "command": "groupCode.groupCode",
        "title": "Group Code in Current File"
      },
      {
        "command": "groupCode.showGroups",
        "title": "Show Code Groups"
      },
      {
        "command": "groupCode.refreshTreeView",
        "title": "Refresh Code Groups",
        "icon": "$(refresh)"
      },
      {
        "command": "groupCode.navigateToGroup",
        "title": "Navigate to Code Group"
      },
      {
        "command": "groupCode.addCodeGroupDialog",
        "title": "Add Code Group (Dialog)",
        "icon": "$(add)"
      },
      {
        "command": "groupCode.suggestGroupWithAI",
        "title": "Suggest Code Group with AI",
        "icon": "$(sparkle)"
      },
      {
        "command": "groupCode.removeAllGroups",
        "title": "Remove All Code Group Comments",
        "category": "Group Code",
        "icon": "$(trash)"
      },
      {
        "command": "groupCode.convertToHierarchy",
        "title": "Convert Flat Groups to Hierarchies",
        "category": "Group Code",
        "icon": "$(arrow-both)"
      },
      {
        "command": "groupCode.rescanWorkspace",
        "title": "Rescan Entire Workspace",
        "category": "Group Code",
        "icon": "$(database)"
      },
      {
        "command": "groupCode.analyzePatterns",
        "title": "Analyze Group Naming Patterns",
        "category": "Group Code",
        "icon": "$(light-bulb)"
      },
      {
        "command": "groupCode.analyzeRefactoring",
        "title": "Analyze Code Group Refactoring",
        "category": "Group Code",
        "icon": "$(wrench)"
      },
      {
        "command": "groupCode.findDuplicates",
        "title": "Find Duplicate/Similar Groups",
        "category": "Group Code",
        "icon": "$(copy)"
      },
      {
        "command": "groupCode.findOrphaned",
        "title": "Find Orphaned Groups",
        "category": "Group Code",
        "icon": "$(archive)"
      },
      {
        "command": "groupCode.setPreferredModel",
        "title": "Set Preferred AI Model",
        "category": "Group Code",
        "icon": "$(hubot)"
      },
      {
        "command": "groupCode.openSettings",
        "title": "Open Settings",
        "category": "Group Code",
        "icon": "$(settings-gear)"
      },
      {
        "command": "groupCode.toggleFavorite",
        "title": "Toggle Favorite",
        "category": "Group Code",
        "icon": "$(star)"
      },
      {
        "command": "groupCode.renameGroup",
        "title": "Rename Group",
        "category": "Group Code",
        "icon": "$(edit)"
      }
    ],
    "chatParticipants": [
      {
        "id": "groupcode",
        "name": "groupcode",
        "description": "Helps you organize and navigate code groups in your workspace",
        "isSticky": true,
        "commands": [
          {
            "name": "generate",
            "description": "AI-powered: Add @group comments where missing. Use 'update' to replace existing, 'workspace' for all files"
          },
          {
            "name": "scan",
            "description": "Scan active file for code groups. Use '/scan workspace' to scan all files"
          },
          {
            "name": "suggest",
            "description": "Get AI suggestions for grouping selected code"
          },
          {
            "name": "list",
            "description": "Show all code groups in the workspace"
          },
          {
            "name": "find",
            "description": "Search for specific code groups"
          },
          {
            "name": "navigate",
            "description": "Navigate to a specific code group"
          },
          {
            "name": "refresh",
            "description": "Rescan all files for code groups"
          },
          {
            "name": "refactor",
            "description": "Analyze code groups for refactoring opportunities"
          },
          {
            "name": "duplicates",
            "description": "Find duplicate or similar group names"
          },
          {
            "name": "orphaned",
            "description": "Find orphaned or unused groups"
          }
        ]
      }
    ],
    "enabledApiProposals": [
      "languageModels"
    ],
    "grammars": [
      {
        "scopeName": "groupcode.injection",
        "path": "./syntaxes/groupcode.tmLanguage.json",
        "injectTo": [
          "source.ts",
          "source.js",
          "source.jsx",
          "source.tsx",
          "source.python",
          "source.java",
          "source.cs",
          "source.cpp",
          "source.c",
          "source.go",
          "source.rust",
          "source.ruby",
          "source.php",
          "source.swift",
          "source.kotlin",
          "source.dart",
          "source.scala",
          "text.html.basic",
          "source.css",
          "source.scss",
          "source.less",
          "source.yaml",
          "source.json"
        ]
      }
    ],
    "keybindings": [
      {
        "command": "groupCode.showGroups",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "groupCode.addCodeGroupDialog",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus"
      },
      {
        "command": "groupCode.renameGroup",
        "key": "f2",
        "when": "focusedView == groupCodeExplorer || focusedView == groupCodeExplorerView"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "groupCode.groupCode",
          "group": "navigation"
        },
        {
          "command": "groupCode.showGroups",
          "group": "navigation"
        },
        {
          "command": "groupCode.addCodeGroupDialog",
          "group": "navigation"
        },
        {
          "command": "groupCode.suggestGroupWithAI",
          "group": "navigation"
        }
      ],
      "explorer/context": [],
      "view/item/context": [
        {
          "command": "groupCode.toggleFavorite",
          "when": "view == groupCodeExplorer && viewItem == hierarchyNode || view == groupCodeExplorerView && viewItem == hierarchyNode",
          "group": "inline@1"
        },
        {
          "command": "groupCode.toggleFavorite",
          "when": "view == groupCodeExplorer && viewItem == hierarchyNodeFavorite || view == groupCodeExplorerView && viewItem == hierarchyNodeFavorite",
          "group": "inline@1"
        },
        {
          "command": "groupCode.toggleFavorite",
          "when": "view == groupCodeExplorer && viewItem == hierarchyNode || view == groupCodeExplorerView && viewItem == hierarchyNode",
          "group": "favorites@1"
        },
        {
          "command": "groupCode.toggleFavorite",
          "when": "view == groupCodeExplorer && viewItem == hierarchyNodeFavorite || view == groupCodeExplorerView && viewItem == hierarchyNodeFavorite",
          "group": "favorites@1"
        },
        {
          "command": "groupCode.renameGroup",
          "when": "view == groupCodeExplorer && viewItem == hierarchyNode || view == groupCodeExplorerView && viewItem == hierarchyNode",
          "group": "edit@1"
        },
        {
          "command": "groupCode.renameGroup",
          "when": "view == groupCodeExplorer && viewItem == hierarchyNodeFavorite || view == groupCodeExplorerView && viewItem == hierarchyNodeFavorite",
          "group": "edit@1"
        }
      ],
      "view/title": [
        {
          "command": "groupCode.filterGroups",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation@0"
        },
        {
          "command": "groupCode.refreshTreeView",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation@1"
        },
        {
          "command": "groupCode.openSettings",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "prepublish": "npm run build",
    "start": "code --extensionDevelopmentPath='$PWD'"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.90.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "vscode": "^1.1.34"
  }
}
