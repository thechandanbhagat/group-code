{
  "name": "groupcode",
  "displayName": "Group Code",
  "description": "Navigate and organize your codebase by functionality across different file types.",
  "version": "1.0.1",
  "icon": "resources/compass-icon.png",
  "publisher": "thechandanbhagat",
  "repository": "https://github.com/thechandanbhagat/code-compass",
  "engines": {
    "vscode": "^1.99.1"
  },
  "activationEvents": [
    "onView:groupCodeExplorer",
    "onView:groupCodeExplorerView",
    "onCommand:groupCode.groupCode",
    "onCommand:groupCode.groupWorkspace",
    "onCommand:groupCode.showGroups",
    "onCommand:groupCode.scanExternalFolder",
    "onCommand:groupCode.refreshTreeView",
    "onCommand:groupCode.navigateToGroup",
    "onCommand:groupCode.addCodeGroupDialog",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "group-code-container",
          "title": "Group Code",
          "icon": "resources/compass-icon.svg"
        }
      ]
    },
    "views": {
      "group-code-container": [
        {
          "id": "groupCodeExplorer",
          "name": "Group Code"
        }
      ],
      "explorer": [
        {
          "id": "groupCodeExplorerView",
          "name": "Group Code"
        }
      ]
    },
    "commands": [
      {
        "command": "groupCode.groupCode",
        "title": "Group Code in Current File"
      },
      {
        "command": "groupCode.groupWorkspace",
        "title": "Group Code in Workspace",
        "icon": "$(search)"
      },
      {
        "command": "groupCode.scanExternalFolder",
        "title": "Scan External Project Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "groupCode.showGroups",
        "title": "Show Code Groups"
      },
      {
        "command": "groupCode.refreshTreeView",
        "title": "Refresh Code Groups",
        "icon": "$(refresh)"
      },
      {
        "command": "groupCode.navigateToGroup",
        "title": "Navigate to Code Group"
      },
      {
        "command": "groupCode.addCodeGroupDialog",
        "title": "Add Code Group (Dialog)",
        "icon": "$(add)"
      }
    ],
    "keybindings": [
      {
        "command": "groupCode.showGroups",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "groupCode.addCodeGroupDialog",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "groupCode.groupCode",
          "group": "navigation"
        },
        {
          "command": "groupCode.showGroups",
          "group": "navigation"
        },
        {
          "command": "groupCode.addCodeGroupDialog",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "groupCode.groupWorkspace",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "groupCode.refreshTreeView",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation"
        },
        {
          "command": "groupCode.groupWorkspace",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation"
        },
        {
          "command": "groupCode.scanExternalFolder",
          "when": "view == groupCodeExplorer || view == groupCodeExplorerView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.99.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "vscode": "^1.1.37"
  }
}
